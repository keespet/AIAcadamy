# Supabase Configuration
# Get these from your Supabase project settings > API
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key

# Supabase Service Role Key (required for admin operations like inviting users)
# Get this from your Supabase project settings > API > Service role key
# WARNING: Never expose this key in client-side code
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Site URL (for auth redirects)
NEXT_PUBLIC_SITE_URL=http://localhost:3000

# SMTP Configuration (for sending invite emails)
# Get these from your email hosting provider (e.g., Hostnet)
SMTP_HOST=smtp.hostnet.nl
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=noreply@yourdomain.nl
SMTP_PASS=your-smtp-password
SMTP_FROM_NAME=AI Academy
SMTP_FROM_EMAIL=noreply@yourdomain.nl

# Invite Settings
INVITE_TOKEN_EXPIRY_HOURS=72
